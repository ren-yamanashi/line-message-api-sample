{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2018",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "/",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "~/*": ["./*"]
    },
    "moduleResolution": "node",
  }
}
